@model KategoriDto
@{
    ViewData["Title"] = "Update";
}

<h1>Kategori Güncelleme</h1>
<div class="row">

    <div class="col-md-4">

        <form asp-action="Update">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="kategori_ad">Kategori ismi: </label>
                <input asp-for="kategori_ad" class="form-control" />
                <span asp-validation-for="kategori_ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>