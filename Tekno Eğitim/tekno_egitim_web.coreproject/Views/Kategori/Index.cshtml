@model IEnumerable<KategoriDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Kategori ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.kategori_id</td>
                <td>@item.kategori_ad</td>
                <td>

                    <a asp-action="Update" asp-route-id="@item.kategori_id">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.kategori_id">Sil</a>
                </td>
            </tr>

        }
    </tbody>
</table>
